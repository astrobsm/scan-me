  "description": "Convert handwriting to text with AI-powered OCR, Text-to-Speech, and Speech-to-Text",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1a1a2e",
  "theme_color": "#1a1a2e",
  "orientation": "portrait-primary",
  "scope": "/",
