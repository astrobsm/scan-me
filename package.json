{
  "name": "charles-douglas-scan-app",
  "version": "1.0.0",
  "description": "CHARLES-DOUGLAS SCAN APP - Convert handwriting to text, Text-to-Speech, Speech-to-Text with clinical-grade reliability",
  "main": "index.js",
  "scripts": {
    "start:mobile": "cd mobile && expo start",
    "start:web": "cd web && npm run dev",
    "build:web": "cd web && npm run build",
    "android": "cd mobile && expo run:android",
    "ios": "cd mobile && expo run:ios",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "lint": "eslint ."
  },
  "workspaces": [
    "mobile",
    "web",
    "shared"
  ],
  "keywords": [
    "ocr",
    "handwriting",
    "recognition",
    "tensorflow",
    "medical",
    "scan",
    "text-to-speech",
    "speech-to-text",
    "charles-douglas"
  ],
  "author": "CHARLES-DOUGLAS Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.0"
  }
}
